<script type="text/javascript">
//为了避免jquery中的'$'与其它的'$'冲突,在此将jquery中的'$'重命名为'jQuery'
var jQuery=$;

jQuery.validator.addMethod("floatnum", function(value, element) { 
  var flo = /^(-?\d+)(\.\d+)?$/; 
  return flo.test(value) || this.optional(element); 
}, "请输入正确的浮点数");

jQuery.validator.addMethod("alnum", function(value, element) {
	return this.optional(element) || /^[a-zA-Z0-9]+$/.test(value);
}, "只能包括英文字母和数字");

jQuery.validator.addMethod("mobile", function(value, element) {
  var length = value.length;
  var mobile =  /^[1]\d{10}$/;
  return this.optional(element) || (length == 11 && mobile.test(value));
}, "手机号码格式错误");   

$().ready(function() {
	$("#orderForm").validate({
		  rules: {
		   fromProvince: "required",
		   toProvince: "required",
		   goodsVolumeReal: {required:true,floatnum:true,maxlength:16},  
		   goodsWeightReal: {required:true,floatnum:true,maxlength:16},  
		   goodsCountReal: {required:true,digits:true},   
		   requestPickDate: "required",
		   requestSendDate: "required",
		   sendPerson:{required:true,maxlength:20},
		   sendPhone: {required:true,mobile:true},
		   companyName:{maxlength:20},
		   idNo: {alnum:true,maxlength:40} 
		  },
		  messages: {
		   fromProvince: "请选择出发省份",
		   toProvince: "请选择到达省份",
		   goodsVolumeReal: {required:"请输入总体积",floatnum:"必须为浮点数",maxlength:"应小于{0}位"},
		   goodsWeightReal: {required:"请输入总总重量",floatnum:"必须为浮点数",maxlength:"应小于{0}位"},
		   goodsCountReal: {required:"请输入总件数",digits:"必须为整数"},
		   requestPickDate: "请选择要求提货时间",
		   requestSendDate: "请选择要求发货时间",
		   sendPerson: {required:"请输入联系人姓名",maxlength:"应小于{0}个字符"},
		   sendPhone: {required:"联系人手机"}, 
		   companyName: {maxlength:"应小于{0}个字符"},
		   idNo: {maxlength:"应小于{0}个字符"}
		  },
		   invalidHandler : function(){
	         return false;
	    },
	     submitHandler : function(){
	     	   sumberOrder();
	         return false;
	    }
	 });
});

//初始化数据
jQuery(document).ready(function(){
	getProvince();
	getGoodsType();
	//getCurrentUser();
	
	//添加 车辆类型
	appendVehicleType("vehicleType");
});

function getCurrentUser() {
	var url ="/lmis-portal/login_getCurrentUser.do";
	jQuery.ajax({
	    type: "GET",    
	    url: url,    
	    dataType: "json",
	    success: function(userId){
	    	jQuery("#userId").attr("value",userId);    
	    } 
	});
}

//取所有省份
function getProvince(){
	//&callback=?"注意这个是为了解决跨域访问的问题 
	var url ="/lmis-portal/sysAreaInfo_getAreaJSON.do?areaId=999999";
	jQuery.getJSON(url, function(result) {
		setFromProvince(result);
		setToProvince(result);
	});
}

//获得货物类型
function getGoodsType(){
	var url ="/lmis-portal/sysCode_getDataTypeJSON.do?parentId=DE90E5593FAB4BECBE136877F3F6FCFD";
	jQuery.getJSON(url, function(result) {
		setGoodsType(result);
	});
}

//设置货物类型
function setGoodsType(result){
	var goodsType = document.getElementById("goodsType");
	jQuery.each(result.data, function(i, code){
		var value = code.code;
		var text = code.name;
		var option = new Option(text,value);
		goodsType.options.add(option);
	}); 
}

//出发地
function setFromProvince(result){
	var province = document.getElementById("fromProvince");
	jQuery.each(result.data, function(i, area){
		var value = area.areaCode;
		var text = area.areaName;
		var option = new Option(text,value);
		province.options.add(option);
	}); 
}

//按上级ID取子地区
function getFromArea(name){
	if( name=='city' ){
		clearSel(document.getElementById("fromCity")); //清空城市
		var province = document.getElementById("fromProvince");
		if(province.options[province.selectedIndex].value == "") return;
		var areaId = province.options[province.selectedIndex].value;
		var url ="/lmis-portal/sysAreaInfo_getAreaJSON.do?areaId="+areaId;
		jQuery.getJSON(url,null,function call(result){ 
			setFromCity(result); 
		});
	}else if( name=='county'){
		clearSel(document.getElementById("fromCounty")); //清空城区
		var city = document.getElementById("fromCity");
		if(city.options[city.selectedIndex].value == "") return;
		var areaId = city.options[city.selectedIndex].value;
		var url ="/lmis-portal/sysAreaInfo_getAreaJSON.do?areaId="+areaId;
		jQuery.getJSON(url,null,function call(result){ 
			setFromCounty(result); 
		});
	}
}

function setFromCounty(result){
	clearSel(document.getElementById("fromCounty")); //清空城区
	var county = document.getElementById("fromCounty");
	jQuery.each(result.data, function(i, area){
		var value = area.areaCode;
		var text = area.areaName;
		var option = new Option(text,value);
		county.options.add(option);
	}); 
}

//当改变省份时设置城市
function setFromCity(result){
	var city = document.getElementById("fromCity");
	jQuery.each(result.data, function(i, area){
		var value = area.areaCode;
		var text = area.areaName;
		var option = new Option(text,value);
		city.options.add(option);
	}); 
	if (result.data.length > 0) {
		var url ="/lmis-portal/sysAreaInfo_getAreaJSON.do?areaId="+result.data[0].areaCode;
		jQuery.getJSON(url,null,function call(result){
			setFromCounty(result); 
		});
	}
}

//目的地
function setToProvince(result){
	var province = document.getElementById("toProvince");
	jQuery.each(result.data, function(i, area){
		var value = area.areaCode;
		var text = area.areaName;
		var option = new Option(text,value);
		province.options.add(option);
	}); 
}

//按上级ID取子地区
function getToArea(name){
	if( name=='city' ){
		clearSel(document.getElementById("toCity")); //清空城市
		var province = document.getElementById("toProvince");
		if(province.options[province.selectedIndex].value == "") return;
		var areaId = province.options[province.selectedIndex].value;
		var url ="/lmis-portal/sysAreaInfo_getAreaJSON.do?areaId="+areaId;
		jQuery.getJSON(url,null,function call(result){ 
			setToCity(result); 
		});
	}else if( name=='county'){
		clearSel(document.getElementById("toCounty")); //清空城区
		var city = document.getElementById("toCity");
		if(city.options[city.selectedIndex].value == "") return;
		var areaId = city.options[city.selectedIndex].value;
		var url ="/lmis-portal/sysAreaInfo_getAreaJSON.do?areaId="+areaId;
		jQuery.getJSON(url,null,function call(result){ 
			setToCounty(result); 
		});
	}
}

function setToCounty(result){
	clearSel(document.getElementById("toCounty")); //清空城区
	var county = document.getElementById("toCounty");
	jQuery.each(result.data, function(i, area){
		var value = area.areaCode;
		var text = area.areaName;
		var option = new Option(text,value);
		county.options.add(option);
	}); 
}

//当改变省份时设置城市
function setToCity(result){
	var city = document.getElementById("toCity");
	jQuery.each(result.data, function(i, area){
		var value = area.areaCode;
		var text = area.areaName;
		var option = new Option(text,value);
		city.options.add(option);
	}); 
	if (result.data.length > 0) {
		var url ="/lmis-portal/sysAreaInfo_getAreaJSON.do?areaId="+result.data[0].areaCode;
		jQuery.getJSON(url,null,function call(result){ 
			setToCounty(result); 
		});
	}
}

//清空下拉列表
function clearSel(oSelect){
	while(oSelect.childNodes.length>0){
		oSelect.removeChild(oSelect.childNodes[0]);
	}
}

//提交表单
function sumberOrder() {
	var sendProvinceId = jQuery("#fromProvince").val(); //发货省份code
	var sendProvinceName = encodeURI(jQuery("#fromProvince :selected").text()); // 发货省份名称
	var sendCityId = jQuery("#fromCity").val(); //发货地市code
	var sendCityName = encodeURI(jQuery("#fromCity :selected").text()); // 发货地市名称
	var sendCountyId = jQuery("#fromCounty").val(); //发货地县级市code
	var sendCountyName = encodeURI(jQuery("#fromCounty :selected").text()); // 发货地县级市名称 
	
	var receiveProvinceId = jQuery("#toProvince").val(); //收货省份code
	var receiveProvinceName = encodeURI(jQuery("#toProvince :selected").text()); // 收货省份名称
	var receiveCityId = jQuery("#toCity").val(); //收货地市code
	var receiveCityName = encodeURI(jQuery("#toCity :selected").text()); // 收货地市名称
	var receiveCountyId = jQuery("#toCounty").val(); //收货地县级市code
	var receiveCountyName = encodeURI(jQuery("#toCounty :selected").text()); // 收货地县级市名称
	var goodsType = jQuery("#goodsType").val(); //货物类型
	var goodsTypeName = encodeURI(jQuery("#goodsType :selected").text());
	var vehicleType = jQuery("#vehicleType").val(); //车辆类型
	var vehicleTypeName = encodeURI(jQuery("#vehicleType :selected").text());
	var goodsVolumeReal = jQuery("#goodsVolumeReal").val(); // 总体积 
	var goodsWeightReal = jQuery("#goodsWeightReal").val(); // 总重量
	var goodsCountReal = jQuery("#goodsCountReal").val(); // 总件数
	var requestPickDate = jQuery("#requestPickDate").val(); // 要求提货时间
	var requestSendDate = jQuery("#requestSendDate").val(); // 要求发货时间
	var sendPerson = encodeURI(jQuery("#sendPerson").val()); // 联系人姓名
	var sendPhone = jQuery("#sendPhone").val(); // 联系人手机
	var companyName = encodeURI(jQuery("#companyName").val()); // 真实姓名\公司名称
	var idNo = jQuery("#idNo").val(); // 证件号码
	var userId = jQuery("#userId").val(); //当前用户Id
	var verifyCode = jQuery("#verifyCode").val();
	var treaty = $("#treaty").attr("checked");
	if(verifyCode=="" || verifyCode.length==0){
		alert("请输入验证码");
		return false;
	}

	if(!treaty){
		alert("未同意发布信息协议");
		return false;
	}
	if(!checkVerifyCode(verifyCode)){
		alert("验证码输入错误");
		$("#verifyCodeImg").trigger("click");
		return false;
	}
	
	
	
	var data = {
		"goodsSource.publicUserId" : userId,
		"goodsSource.sendProvinceId" : sendProvinceId,
		"goodsSource.sendProvinceName" : sendProvinceName,
		"goodsSource.sendCityId" : sendCityId,
		"goodsSource.sendCityName" : sendCityName,
		"goodsSource.sendCountyId" : sendCountyId,
		"goodsSource.sendCountyName" : sendCountyName,
		"goodsSource.receiveProvinceId" : receiveProvinceId,
		"goodsSource.receiveProvinceName" : receiveProvinceName,
		"goodsSource.receiveCityId" : receiveCityId,
		"goodsSource.receiveCityName" : receiveCityName,
		"goodsSource.receiveCountyId" : receiveCountyId,
		"goodsSource.receiveCountyName" : receiveCountyName,
		"goodsSource.vehicleType" : vehicleType,
		"goodsSource.vehicleTypeName" : vehicleTypeName,
		"goodsSource.goodsType" : goodsType,
		"goodsSource.goodsTypeName" : goodsTypeName,
		"goodsSource.goodsVolume" : goodsVolumeReal,
		"goodsSource.goodsWeight" : goodsWeightReal,
		"goodsSource.goodsCount" : goodsCountReal,
		"goodsSource.requestPickDate" : requestPickDate,
		"goodsSource.requestSendDate" : requestSendDate,
		"goodsSource.sendPerson" : sendPerson,
		"goodsSource.sendPhone" : sendPhone,
		"goodsSource.companyName" : companyName,
		"goodsSource.idNo" : idNo
	}
	
	$.ajax({
			type:"GET",
			async:false,
			contenttype: "application/json; charset=utf-8",
			url: LMIS_REQUEST_URL+"/noAuth/tms/goods-source!save.action",
			data : data,
			dataType : "jsonp",
			success : function(json){
				$("#verifyCodeImg").trigger("click");
				alert("发布成功");
				resetForm(vehicleForm);
			},
			error:function(){
				alert("提交失败！");
			}
		});
}
function success_jsonpCallback(json){
	alert("提交成功！");
	resetForm("orderForm");
	$("#verifyCodeImg").trigger("click");
}
</script>

